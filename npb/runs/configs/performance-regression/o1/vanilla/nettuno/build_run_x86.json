{
    "info": {},
    "tags": [
        "exec_time"
    ],
    "executables": [
        "bt_x86_64_init.out",
        "cg_x86_64_init.out",
        "ep_x86_64_init.out",
        "ft_x86_64_init.out",
        "is_x86_64_init.out",
        "lu_x86_64_init.out",
        "mg_x86_64_init.out",
        "sp_x86_64_init.out",
        "ua_x86_64_init.out"
    ],
    "env": {},

    "*": {
        "npb_class": "A",
        "iterations": 3,
        "output": "run_${executable}_${npb_class}_${iteration}.log",
        "prepend": [],
        "append": [],
        "build": [
            {
                "before": true,
                "args": [
                    "make",
                    "clean"
                ]
            },
            {
                "before": true,
                "args": [
                    "make",
                    "${npb_class}"
                ]
            },
            {
                "before": true,
                "args": [
                    "make",
                    "-C",
                    "${build_dir}",
                    "-j10",
                    "${executable}",
                    "OPT_LEVEL=-O1",
                    "UNMODIFIED=1"
                ],
                "output": "${build_dir}/${executable}_${npb_class}_build.log"
            },
            {
                "before": false,
                "args": [
                    "cp",
                    "${build_dir}/${executable}",
                    "${dest_dir}"
                ]
            },
            {
                "before": false,
                "args": [
                    "mv",
                    "${build_dir}/${executable}_${npb_class}_build.log",
                    "${dest_dir}"
                ]
            }
        ],
        "run": [
            {
                "before": false,
                "args": [
                    "grep",
                    "-vzq",
                    "\"UNSUCCESSFUL\"",
                    "run_${executable}*.log"
                ],
                "output": ""
            },
            {
                "before": false,
                "args": [
                    "grep",
                    "-h",
                    "\"Time in\"",
                    "run_${executable}*.log"
                ],
                "output": "time_${executable}_${npb_class}.log"
            },
            {
                "before": false,
                "args": [
                    "rm",
                    "-rf",
                    "run_${executable}*.log"
                ],
                "output": ""
            }
        ],
        "post_process": [
            {
                "args": [
                    "grep",
                    "-o",
                    "'[0-9\\.][0-9\\.]*'",
                    "time_${executable}_${npb_class}.log"
                ],
                "output": "data.log"
            },
            {
                "args": [
                    "LC_NUMERIC=\"C\"",
                    "awk",
                    "'{sum+=sprintf(\"%f\",$1)}END{printf \"%.2f\\n\",sum/NR}'",
                    "data.log"
                ],
                "output": "avg.log"
            },
            {
                "args": [
                    "echo -n",
                    "${benchmark},",
                    ">>results_${npb_class}.csv"
                ]
            },
            {
                "args": [
                    "cat",
                    "avg.log",
                    ">>results_${npb_class}.csv"
                ]
            },
            {
                "args": [
                    "rm",
                    "data.log",
                    "avg.log"
                ]
            }
        ]
    }
}
