{
    "info": {},
    "tags": [
        "exec_time"
    ],
    "executables": [
        "bt_x86_64_aligned.out",
        "cg_x86_64_aligned.out",
        "ep_x86_64_aligned.out",
        "ft_x86_64_aligned.out",
        "is_x86_64_aligned.out",
        "lu_x86_64_aligned.out",
        "mg_x86_64_aligned.out",
        "sp_x86_64_aligned.out",
        "ua_x86_64_init.out"
    ],
    "env": {},

    "*": {
        "npb_class": "S",
        "iterations": 3,
        "output": "run_${executable}_${iteration}.log",
        "prepend": [],
        "append": [],
        "build": [
            {
                "before": true,
                "args": [
                    "make",
                    "clean"
                ]
            },
            {
                "before": true,
                "args": [
                    "make",
                    "${npb_class}"
                ]
            },
            {
                "before": true,
                "args": [
                    "make",
                    "-C",
                    "${build_dir}",
                    "-j10",
                    "${executable}",
                    "OPT_LEVEL=-O1",
                    "NO_STACKMAPS=1",
                    "EXPERIMENT_MODE=1",
                    "LLC_FLAGS=\"-disable-block-align --mc-relax-all -aarch64-csr-alignment=8 -align-bytes-to-four -reg-scavenging-slot -enable-misched=false\"",
                    "LLC_FLAGS_X86=\"-mattr=+simple-reg-offset,-multiply-with-imm,+aarch64-sized-imm,-non-zero-imm-to-mem,+aarch64-constant-cost-model,+force-vector-mem-op,+avoid-opt-mul-1 -x86-enable-simplify-cfg -no-x86-call-frame-opt -disable-x86-frame-obj-order\""
                ],
                "output": "${build_dir}/${executable}_build.log"
            },
            {
                "before": false,
                "args": [
                    "cp",
                    "${build_dir}/${executable}",
                    "${dest_dir}"
                ]
            },
            {
                "before": false,
                "args": [
                    "mv",
                    "${build_dir}/${executable}_build.log",
                    "${dest_dir}"
                ]
            }
        ],
        "run": [
            {
                "before": false,
                "args": [
                    "grep",
                    "-vzq",
                    "\"UNSUCCESSFUL\"",
                    "run_${executable}*.log"
                ],
                "output": ""
            },
            {
                "before": false,
                "args": [
                    "grep",
                    "-h",
                    "\"Time in\"",
                    "run_${executable}*.log"
                ],
                "output": "time_${executable}.log"
            },
            {
                "before": false,
                "args": [
                    "rm",
                    "-rf",
                    "run_${executable}*.log"
                ],
                "output": ""
            }
        ],
        "post_process": [
            {
                "args": [
                    "grep",
                    "-o",
                    "'[0-9\\.][0-9\\.]*'",
                    "time_${executable}.log"
                ],
                "output": "data.log"
            },
            {
                "args": [
                    "LC_NUMERIC=\"C\"",
                    "awk",
                    "'{sum+=sprintf(\"%f\",$1)}END{printf \"%.2f\\n\",sum/NR}'",
                    "data.log"
                ],
                "output": "avg.log"
            },
            {
                "args": [
                    "echo -n",
                    "${benchmark},",
                    ">>results.csv"
                ]
            },
            {
                "args": [
                    "cat",
                    "avg.log",
                    ">>results.csv"
                ]
            },
            {
                "args": [
                    "rm",
                    "data.log",
                    "avg.log"
                ]
            }
        ]
    }
}
